{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"ES2020"
		],
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": false,
		"strictNullChecks": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}