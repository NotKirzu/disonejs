{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "operator-linebreak": ["error", "after", { "overrides": { "?": "before", ":": "before" } }],
        "linebreak-style": ["error","unix"],
        "quotes": ["error","double"],
        "semi": ["error","always"]
    },
    "ignorePatterns": [
        "node_modules"
    ]
}
